.screen

  &-container
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0

  &-content
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    overflow: scroll
    background-color: silver
    -webkit-overflow-scrolling: touch
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2)
    z-index: 1

    &-has-header
      top: headerHeight

    &-padded
      padding: 20px
